<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <context:component-scan base-package="ua.org.gostroy.oracleExamples">
        <context:exclude-filter expression="org.springframework.stereotype.Controller" type="annotation"/>
    </context:component-scan>

    <context:property-placeholder location="classpath:/ua/org/gostroy/oracleExamples/hr/properties/db_gostroy_oracle.properties" />

    <import resource="applicationContext.d/dataSource.xml"/>
    <import resource="applicationContext.d/jpa_hibernate.xml"/>
    <import resource="applicationContext.d/beans.xml"/>

</beans>